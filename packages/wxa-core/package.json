{
    "name": "@wxa/core",
    "version": "2.0.0",
    "description": "wxa core feature",
    "main": "./dist/main.js",
    "scripts": {
        "prebuild": "sh prebuild.sh",
        "build": "webpack src/index.js --output-path ./dist/ --optimize-minimize",
        "dev": "npm run prebuild && webpack src/index.js --output-path ./dist/ -w",
        "test": "jest --no-cache",
        "cover": "jest --coverage",
        "travis": "npm run cover",
        "precommit": "lint-staged",
        "changelog": "conventional-changelog -p angular -i CHANGELOG.md -s -r 0",
        "prepublishOnly": "npm run prebuild && npm run build",
        "commit": "git cz",
        "ts-build": "webpack ts/index.ts --output-path ./dist/ --optimize-minimize",
        "ts-dev": "npm run prebuild && webpack ts/index.ts --output-path ./dist/ -w"
    },
    "author": "iveswen",
    "license": "MIT",
    "repository": "https://github.com/wxajs/wxa.git",
    "homepage": "https://wxajs.github.io/wxa/",
    "devDependencies": {
        "@types/lodash": "^4.14.138",
        "babel-core": "^7.0.0-bridge.0",
        "babel-eslint": "^10.0.0",
        "babel-loader": "^8.0.0",
        "conventional-changelog": "^1.1.24",
        "conventional-changelog-cli": "^1.3.22",
        "cz-conventional-changelog": "^2.1.0",
        "eslint": "^4.19.1",
        "eslint-config-google": "^0.9.1",
        "eslint-plugin-jest": "^21.27.1",
        "husky": "^0.14.3",
        "jest": "^23.6.0",
        "lint-staged": "^6.1.1",
        "ts-loader": "^6.1.0",
        "tslint": "^5.12.1",
        "tslint-config-airbnb": "^5.11.1",
        "typescript": "^3.3.1",
        "uglifyjs-webpack-plugin": "^1.3.0",
        "webpack": "^4.20.2",
        "webpack-cli": "^3.1.1"
    },
    "dependencies": {
        "@types/jest": "^24.0.18",
        "deep-object-diff": "^1.1.0",
        "lodash": "^4.17.11",
        "miniprogram-api-typings": "^2.8.2",
        "ts-jest": "^24.1.0"
    },
    "lint-staged": {
        "*.js": [
            "eslint --fix",
            "git add"
        ]
    },
    "sideEffects": false,
    "publishConfig": {
        "access": "public"
    }
}
